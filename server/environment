SERVER_ROOT_DIR=/srv/www
SECRETS_DIR=/srv/www/secrets
SECRETS_APP_PATH=kv/data
SECRETS_LOGIN_PATH=auth/userpass/login
SECRETS_SERVICE_HOST=http://127.0.0.1
SECRETS_SERVICE_PORT=8201
