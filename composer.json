{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "ericfortmeyer/activity-log",
  "description": "A time tracking application.",
  "type": "project",
  "license": "GNU GPLv3",
  "authors": [
    {
      "name": "Eric Fortmeyer",
      "email": "e.fortmeyer01@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-pdo": "*",
    "auth0/auth0-php": "^8.17",
    "guzzlehttp/guzzle": "^7.10",
    "guzzlehttp/psr7": "^2.8",
    "http-interop/http-factory-guzzle": "^1.2",
    "monolog/monolog": "^3.9",
    "nyholm/psr7": "^1.7",
    "nyholm/psr7-server": "~1.1.0",
    "phpolar/csrf-protection": "^3.0",
    "phpolar/csrf-response-filter": "^1.0",
    "phpolar/csv-file-storage": "^3.1",
    "phpolar/model": "^2.0",
    "phpolar/model-resolver": "^1.0",
    "phpolar/phpolar": "^8.0",
    "phpolar/pure-php": "^2.0 || ^3.0",
    "phpolar/validators": "^1.2",
    "picocss/pico": "^v2.0.6",
    "pimple/pimple": "^3.5"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "EricFortmeyer\\ActivityLog\\": "src/",
      "EricFortmeyer\\ActivityLog\\UnitTests\\": "tests/unit/"
    },
    "files": [
      "src/config/DiTokens.php",
      "src/config/FileNames.php",
      "src/UserInterface/HTMLElements/head.php",
      "src/UserInterface/Components/timeEntriesNav.php",
      "src/UserInterface/Components/formInput.php"
    ]
  },
  "require-dev": {
    "php-coveralls/php-coveralls": "^2.7.0",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.0.9",
    "squizlabs/php_codesniffer": "^4"
  },
  "scripts": {
    "test": [
      "phpunit --color=always"
    ],
    "phpstan": "XDEBUG_MODE=off phpstan analyze",
    "analyze": "@phpstan --memory-limit=256M",
    "cs": "phpcs --exclude=Squiz.Functions.MultiLineFunctionDeclaration,Squiz.WhiteSpace.ScopeClosingBrace --ignore='*DataProviders*' --standard=PSR12",
    "cbf": "phpcbf --exclude=Squiz.Functions.MultiLineFunctionDeclaration,Squiz.WhiteSpace.ScopeClosingBrace --standard=PSR12",
    "lint": "@cs ./src ./tests",
    "lint-fix": "@cbf ./src ./tests",
    "ci:analyze": "@phpstan --no-progress ./src",
    "ci:lint": [
      "@cs -q --no-colors ./src ./tests"
    ],
    "ci:test": [
      "@test --configuration=phpunit.ci.xml"
    ],
    "ci:test-build": [
      "@test --configuration=phpunit.ci.xml"
    ],
    "ci:generate-coverage-badge": [
      "@test:coverage",
      "php-coveralls -v"
    ],
    "link-css-framework": [
      "ln -s -f ../../../vendor/picocss/pico/css/pico.min.css public/resources/css/"
    ],
    "post-install-cmd": [
      "@link-css-framework"
    ],
    "post-update-cmd": [
      "@link-css-framework"
    ],
    "test:coverage": "XDEBUG_MODE=coverage composer exec \"@test --coverage-text\""
  }
}
